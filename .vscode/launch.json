{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "web (hot reloadable)",
            "type": "dart",
            "request": "launch",
            "program": "lib/main.dart",
            "args": [
              "-d",
              "chrome",
              "--web-experimental-hot-reload",
            ]
        },
        {
            "name": "cogniso_app",
            "request": "launch",
            "program": "lib/main.dart",
            "type": "dart"
        },
        {
            "name": "cogniso_app (profile mode)",
            "request": "launch",
            "type": "dart",  
            "program": "lib/main.dart",
            "flutterMode": "profile"
        },
        {
            "name": "cogniso_app (release mode)",
            "request": "launch",
            "program": "lib/main.dart",
            "type": "dart",
            "flutterMode": "release"
        }
    ]
}